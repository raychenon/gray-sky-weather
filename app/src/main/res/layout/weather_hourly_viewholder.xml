<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding">

    <TextView
        android:id="@+id/weather_hour_time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="17h00"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weather_hour_real_temp_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="25 C"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_hour_time_textview" />

    <ImageView
        android:id="@+id/weather_icon_imageview"
        android:layout_width="@dimen/weather_icon_height"
        android:layout_height="@dimen/weather_icon_height"
        android:layout_gravity="center_horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_hour_real_temp_textview" />

    <TextView
        android:id="@+id/weather_hour_rain_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rain: "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weather_icon_imageview" />


</androidx.constraintlayout.widget.ConstraintLayout>